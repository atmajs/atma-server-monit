{
    "name": "everlog",
    "version": "1.0.10",
    "description": "CSV Streamed Logger for any case",
    "author": "Alex Kit (alex.kit@atmajs.com)",
    "main": "lib/index.js",
    "bin": {
        "everlog": "index.js"
    },
    "license": "MIT",
    "keywords": [
        "log",
        "logger",
        "monitor",
        "slack"
    ],
    "scripts": {
        "build": "npm run build:lib && npm run build-dts && npm run typedoc && cd www && npm run build",
        "build:lib": "app-bundler -LIB",
        "build:dts": "tsc --version && tsc -p tsconfig-build.json && atma run tools/build-dts",
        "watch": "app-bundler --watch",
        "example": "node examples/server --TEST --debug --monit.pss foo",
        "release": "echo atma pub -m \"Message\"",
        "test": "atma test",
        "typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json && atma task copy"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/everlog"
    },
    "dependencies": {
        "@slack/web-api": "^5.8.0",
        "alot": "^0.2.93",
        "appcfg": "^0.4.53",
        "atma-formatter": "^0.8.15",
        "atma-io": "^1.2.41",
        "atma-utils": "^0.1.37",
        "class-json": "^0.3.3",
        "express-basic-auth": "^1.2.0",
        "memd": "^0.2.84",
        "ruta": "^0.2.71",
        "signal-exit": "^3.0.2"
    },
    "peerDependencies": {
        "atma-server": ">0.4.86"
    },
    "devDependencies": {
        "@types/node": "^10.17.17",
        "app-bundler": "0.0.88",
        "atma": "^0.12.33",
        "atma-io-middleware-condcomments": "^1.2.8",
        "atma-io-middleware-yml": "^1.1.25",
        "atma-loader-less": "^1.1.5",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3",
        "shellbee": "^0.5.4",
        "typedoc": "^0.21.5"
    },
    "app-bundler": {
        "apps": {
            "lib": {
                "file": "src/exports.ts",
                "outputMain": "lib/index.js"
            },
            "browser": {
                "file": "src/exports-browser.ts",
                "outputMain": "lib/browser.js",
                "package": {
                    "module": "commonjs",
                    "moduleName": "everlog",
                    "moduleWrapper": "umd",
                    "commonjs": {
                        "output": "simplified"
                    }
                },
                "settings": {
                    "atma-io-middleware-condcomments": {
                        "defines": {
                            "BROWSER": true
                        }
                    }
                }
            },
            "cli": {
                "file": "src/cli.ts",
                "outputMain": "lib/cli.js"
            }
        },
        "common": {
            "package": {
                "module": "commonjs",
                "commonjs": {
                    "output": "simplified"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "ts": [
                    "atma-io-middleware-condcomments:read",
                    "atma-loader-ts:read"
                ]
            },
            "dynamicDependencies": [
                "atma-server",
                "atma-io",
                "atma-formatter",
                "memd",
                "@slack/web-api",
                "^fs$",
                "^os$",
                "^path$",
                "signal-exit"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-io-middleware-condcomments",
            "atma-loader-ts",
            "atma-loader-less"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "target": "es6",
                        "module": "AMD",
                        "#if (LIB)": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        },
        "tasks": {
            "copy": {
                "files": {
                    "./assets/background.jpg": "./docs/assets/background.jpg"
                }
            }
        }
    }
}
