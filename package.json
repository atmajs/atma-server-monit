{
    "name": "atma-server-monit",
    "version": "1.0.2",
    "description": "Application Monitor Layer",
    "author": "Alex Kit (alex.kit@atmajs.com)",
    "main": "lib/index.js",
    "license": "MIT",
    "scripts": {
        "build": "app-bundler && npm run build-dts",
        "build-debug": "app-bundler --inspect-brk",
        "release": "echo atma pub -m \"Message\"",
        "build-dts": "tsc --version && tsc -p tsconfig-build.json && atma run tools/build-dts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tenbits/atma-loader-ts"
    },
    "peerDependencies": {
        "atma-server": "^0.4.50"
    },
    "devDependencies": {
        "@types/node": "^10.17.17",
        "app-bundler": "0.0.83",
        "atma-server": "^0.4.50",
        "shellbee": "^0.5.2"
    },
    "app-bundler": {
        "file": "src/index.ts",
        "outputMain": "lib/index.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        },
        "dynamicDependencies": [
            "atma-server",
            "atma-formatter",
            "memd",
            "@slack/web-api",
            "^fs$",
            "^os$",
            "^path$",
            "signal-exit"
        ]
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        }
                    }
                }
            }
        }
    },
    "dependencies": {
        "@slack/web-api": "^5.8.0",
        "atma-formatter": "^0.8.15",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3",
        "memd": "^0.2.84",
        "signal-exit": "^3.0.2"
    }
}
