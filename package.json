{
    "name": "atma-server-monit",
    "version": "1.0.19",
    "description": "Application Monitor Layer",
    "author": "Alex Kit (alex.kit@atmajs.com)",
    "main": "lib/index.js",
    "license": "MIT",
    "scripts": {
        "build": "app-bundler && npm run build-dts",
        "watch": "app-bundler --watch",
        "example": "node examples/server --TEST --debug --monit.pss foo",
        "release": "echo atma pub -m \"Message\"",
        "build-dts": "tsc --version && tsc -p tsconfig-build.json && atma run tools/build-dts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tenbits/atma-loader-ts"
    },
    "peerDependencies": {
        "atma-server": "^0.4.62"
    },
    "devDependencies": {
        "@types/node": "^10.17.17",
        "app-bundler": "0.0.88",
        "atma-io": "^1.2.32",
        "atma-io-middleware-yml": "^1.1.25",
        "atma-loader-less": "^1.1.5",
        "atma-server": "^0.4.75",
        "shellbee": "^0.5.4"
    },
    "app-bundler": {
        "file": "src/index.ts",
        "outputMain": "lib/index.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        },
        "dynamicDependencies": [
            "atma-server",
            "atma-formatter",
            "memd",
            "@slack/web-api",
            "^fs$",
            "^os$",
            "^path$",
            "signal-exit"
        ]
    },
    "atma": {
        "plugins": [
            "atma-loader-ts",
            "atma-loader-less"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "target": "es6",
                        "module": "CommonJS",
                        "#if (TEST)": {
                            "module": "AMD"
                        }
                    }
                }
            }
        }
    },
    "dependencies": {
        "@slack/web-api": "^5.8.0",
        "alot": "^0.2.81",
        "atma-formatter": "^0.8.15",
        "atma-loader-ts": "^1.1.12",
        "atma-utils": "^0.1.37",
        "class-json": "^0.2.88",
        "dts-bundle": "^0.7.3",
        "express-basic-auth": "^1.2.0",
        "memd": "^0.2.84",
        "signal-exit": "^3.0.2"
    }
}
